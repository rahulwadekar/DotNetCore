<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.employee.Name</h1>
            </div>
            <div class="card-body text-center">
                <div class="card-body w-25 text-center">
                    <img asp-append-version="true" class="card-img-top" src="@photoPath" />
                </div>
                <h4>Employee ID: @Model.employee.Id</h4>
                <h4>Email: @Model.employee.Email</h4>
                <h4>Department: @Model.employee.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-action="index" asp-controller="home" class="btn btn-primary">Back</a>
                <a class="btn btn-primary" asp-action="edit" asp-controller="home" asp-route-id="@Model.employee.Id">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}

